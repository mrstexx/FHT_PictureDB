<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="hBox" maxHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.swe2.cs.views.SearchBarView">
    <children>
        <TextField fx:id="searchTextField" promptText="Enter to search" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets right="5.0"/>
            </HBox.margin>
        </TextField>
        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onSearch" text="Search"/>
    </children>
    <BorderPane.margin>
        <Insets left="10.0" right="10.0" top="10.0"/>
    </BorderPane.margin>
    <padding>
        <Insets bottom="10.0"/>
    </padding>
</HBox>
