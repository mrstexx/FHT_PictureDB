<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.swe2.cs.views.AddPhotographerView"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox prefHeight="200.0" prefWidth="100.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Firstname"/>
                <TextField fx:id="firstName"
                           promptText="Firstname"/>
                <Label fx:id="labelLastName" text="Lastname">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="lastName"
                           promptText="Lastname"/>
                <Label fx:id="labelBirthDate" text="Date">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <DatePicker fx:id="birthDate"
                            maxWidth="1.7976931348623157E308"
                            promptText="Choose birthdate"/>
                <Label text="Notes">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <TextArea fx:id="notes"
                          promptText="Add Notes"/>
                <Button fx:id="save" onAction="#savePhotographer"
                        alignment="CENTER"
                        contentDisplay="CENTER"
                        maxWidth="1.7976931348623157E308"
                        mnemonicParsing="false"
                        prefHeight="25.0"
                        text="Add Photographer"
                        textAlignment="CENTER">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0"
                        right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>

</AnchorPane>
